.all_bottom{
	width: 100%;
	margin-top: 20px;
	border-top: 1px solid #ddd;
	height: 100%;
}

	.all_bottom .bottom_top{
		width: 1190px;
		margin: 0 auto;
		height: 100px;
		padding: 38px 0;
	    background-color: #fff;
	}

	.all_bottom .bottom_top .top_fixed{
		display: block;
	    min-height: 1%;
	}

		.all_bottom .bottom_top .top_fixed .map{
			float: left;
		    width: 296px;
		    font-size: 18px;
		}

			.all_bottom .bottom_top .top_fixed .map img{
				width: 52px;
			    height: 52px;
			    margin: 0 13px 0 40px;
			    float: left;
			}

			.all_bottom .bottom_top .top_fixed .map strong{
				color: #333;
			    line-height: 18px;
			    vertical-align: text-top;
			    font-weight: bold;
			}

			.all_bottom .bottom_top .top_fixed .map span{
				color: #999;
			    line-height: 30px;
			    font-size: 18px;
			    float: left;
			    
			}

		.all_bottom .bottom_top .top_fixed .map_line{
			width: 1px;
		    margin: 4px 0;
		    height: 48px;
		    float: left;
		    background: #ccc;
		}


	.all_bottom .bottom_mid{
		width: 100%;
		height: 100%;
		border-top: 1px #ddd solid;
	    border-bottom: 1px #ddd solid;
	    background: #fff;
	}

		.all_bottom .mid_wrap{
			width: 1190px;
			margin: 0 auto;
			padding: 35px 0 30px;
		    background: #fff;
		    display: block;
		    min-height: 1%;
		    overflow: hidden;
		}

			.all_bottom .mid_wrap li{
				float: left;
			    width: 95px;
			    margin-right: 65px;
			}

				.all_bottom .mid_wrap i{
					display: block;
				    width: 20px;
				    height: 20px;
				    float: left;
				    background: url(http://static01.fn-mart.com/product/images/index/fn_g_header.png?170725) no-repeat;
				}

				.all_bottom .mid_wrap .shopping i{
				    background-position: -23px -52px;
				}

				.all_bottom .mid_wrap .payment i{
				    background-position: -96px -44px;
				}

				.all_bottom .mid_wrap .distribution i{
				    background-position: -118px -22px;
				}

				.all_bottom .mid_wrap .after_sales i{
				    background-position: -96px -22px;
				}

				.all_bottom .mid_wrap .problem i{
				    background-position: -168px -42px;
				}

				.all_bottom .mid_wrap li dl{
					margin-left: 25px;
				}

					.all_bottom .mid_wrap li dl dt{
						font-size: 16px;
					    line-height: 20px;
					    padding-bottom: 5px;
					    font-weight: 700;
					}

					.all_bottom .mid_wrap li dl dd{
						font-size: 12px;
					    line-height: 22px;
					}

					.all_bottom .mid_wrap li dl a{
						color: #666;
					}
				.all_bottom .mid_wrap .app_item{
					float: right;
					height: 124px;
					width: 108px;
				    margin-right: 25px;
				}
   

				.all_bottom .mid_wrap .app_item p,.all_bottom .mid_wrap .wechat_item p{
					height: 24px;
				    font-size: 16px;
				    font-weight: 700;
				    padding-bottom: 10px;
				    color: #666;
				}

				.all_bottom .mid_wrap .app_item a,.all_bottom .mid_wrap .wechat_item a{
					cursor: default;
				    text-decoration: none;
				}

				.all_bottom .mid_wrap .wechat_item{
					width: 90px;
				    margin-right: 83px;
				    float: right;
				    height: 124px;
				}